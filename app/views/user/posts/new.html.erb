<%= form_with scope: :post, url: user_posts_path, local: true do |f| %>
<div class="form-group">
  <%= f.label :title, :class => 'control-label col-lg-2' %>
  <%= f.text_field :title, :class => 'form-control' %>

  <%= f.label :blog, :class => 'control-label col-lg-2' %>
  <%= f.cktext_area :blog, :class => 'form-control', input_html: { ckeditor: { toolbar: 'Full' } } %>
  <%=f.error_span(:blog) %>

  <%#= f.label :picture, :class => 'control-label col-lg-2' %>
  <%#= f.file_field :picture, accept: 'image/jpeg, image/png, image/jpg' %>
  <%#=f.error_span(:picture) %>
</div>
<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
   <%= f.submit "draft", :value => "draft", :class => 'btn btn-primary' %>
   <%= f.submit "Publish", :value => "publish", :class => 'btn btn-primary' %>
   <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
   posts_path, :class => 'btn btn-default' %>
 </div>
</div>
<% end %>
