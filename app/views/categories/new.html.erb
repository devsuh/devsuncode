<%= form_with scope: :category, url: categories_path, local: true do |f| %>
 <div class="form-group">
  <%= f.label :name, :class => 'control-label col-lg-2' %>
  <%= f.text_field :name, :class => 'form-control' %>
 </div>
 <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
     <%= f.submit "Create Category", :value => "Create Category", :class => 'btn btn-primary' %>
   </div>
 </div>
<% end %>
