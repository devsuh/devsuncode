<%- model_class = Post -%>

<dl class="dl-horizontal">
  <dt><strong><%= :Title %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= :Blog %>:</strong></dt>
	<dd><%= raw @post.blog %></dd>
</dl>

